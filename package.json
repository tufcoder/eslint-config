{
  "name": "@tufcoder/eslint-config",
  "version": "1.0.5",
  "type": "module",
  "license": "MIT",
  "author": "Oswaldo Castro",
  "description": "A shareable ESLint and Prettier configuration for JavaScript and TypeScript projects, following Tufcoder's code style and best practices.",
  "keywords": [
    "eslint",
    "eslintconfig",
    "prettier",
    "lint",
    "typescript",
    "javascript",
    "config",
    "shareable-config",
    "styleguide",
    "tufcoder"
  ],
  "files": [
    "eslint.config.node.mjs",
    "eslint.config.react.mjs",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "lint": "eslint .",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master"
  },
  "exports": {
    "./node": {
      "import": "./eslint.config.node.mjs"
    },
    "./react": {
      "import": "./eslint.config.react.mjs"
    }
  },
  "peerDependencies": {
    "@eslint/js": "^9.31.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0"
  },
  "devDependencies": {
    "standard-version": "^9.5.0"
  }
}
